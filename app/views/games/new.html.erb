<h1>NEW GAME</h1>

<ul class="d-flex">
  <% @letters.map do |lettre| %>
    <li class="p-3 mb-2 bg-primary text-white"><%= lettre.capitalize %></li>
  <% end %>
</ul>

<form action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters%>
  <div class="form-group">
    <label for="word" >What is the longest word you can find ?</label>
    <div class="d-flex">
      <input type="text" name="word" class="form-control" id="word">
      <button type="submit" value="Play" class="btn btn-primary">Play</button>
    </div>
    <small id="wordHelp" class="form-text text-muted">You have 30sec</small>
  </div>
</form>
